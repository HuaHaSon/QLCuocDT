@model IEnumerable<Model.EFModel.HoaDonTinhCuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Assets/sufee-admin-dashboard-master/#">Dashboard</a></li>
                    <li><a href="/Assets/sufee-admin-dashboard-master/#">Table</a></li>
                    <li class="active">Data table</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.KhachHang.TenKH)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SIM.TenSim)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SIM.SoSim)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NgayHD)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CuocThueBao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThanhTien)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongTien)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SIM.TenSim)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SIM.SoSim)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayHD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CuocThueBao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThanhTien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TongTien)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.HoaDonTinhCuocID })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->



